*scrollBar: false

*font: xft:Inconsolata:Medium:size=14, xft:Inconsolata for Powerline:Medium:size=14
*boldFont: xft:Inconsolata:Bold:size=14, xft:Inconsolata for Powerline:Medium:size=14

URxvt.letterSpace: -1
URxvt.depth: 32

! setup urxvt-font-size for on the fly font changes
URxvt.perl-ext-common: font-size
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-0:      font-size:reset

URxvt.intensityStyles: false


! Hide the pointer when typing (no need for unclutter)
URxvt*pointerBlank: true

