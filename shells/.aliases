alias ls='ls --color=auto'
alias grep='grep  --color=auto'
alias please='sudo $(fc -ln -1)'

#setup gcd to cd from git repo root
function gcd() {
  cd $(gpwd)/$1
}

function gpwd() {
  echo $(git rev-parse --show-toplevel)
}

